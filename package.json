{
  "name": "update-files-action",
  "version": "0.1.0",
  "description": "A GitHub action for updating files.",
  "author": "Branislav Hol√Ω <branoholy@gmail.com>",
  "repository": "git@github.com/branoholy/branoholy-com.git",
  "bugs": {
    "url": "https://github.com/branoholy/update-files-action/issues"
  },
  "homepage": "https://github.com/branoholy/update-files-action#readme",
  "license": "MIT",
  "engines": {
    "node": "15.11.0"
  },
  "scripts": {
    "build": "webpack --env production",
    "build:dist": "npm run build && rm -rf dist/ && cp -r build/ dist/",
    "start": "node build/index.js",
    "start:dist": "node dist/index.js",
    "lint": "eslint 'src/**' 'tests/**'",
    "lint:fix": "npm run lint -- --fix",
    "lint:all": "eslint '**' && prettier --check '**'",
    "lint:staged": "lint-staged",
    "type-check": "tsc",
    "type-check:watch": "tsc --watch",
    "node-versions-check": "babel-node --extensions '.ts' scripts/check-node-versions.ts",
    "node-versions-update": "babel-node --extensions '.ts' scripts/update-node-versions.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config jest-e2e.config.js",
    "test:e2e:coverage": "npm run test:e2e -- --coverage",
    "test:e2e:watch": "npm run test:e2e -- --watch",
    "test:unit": "jest --config jest-unit.config.js",
    "test:unit:coverage": "npm run test:unit -- --coverage",
    "test:unit:watch": "npm run test:unit -- --watch",
    "stryker:e2e": "stryker run stryker-e2e.conf.js",
    "stryker:unit": "stryker run stryker-unit.conf.js",
    "postinstall": "[ -d .git ] && git config --local core.hooksPath hooks || echo 'Info: Git hooks not set outside a git repository.'"
  },
  "dependencies": {
    "@actions/core": "1.2.6",
    "@octokit/rest": "18.3.3",
    "btoa": "1.2.1",
    "envalid": "7.0.0"
  },
  "devDependencies": {
    "@babel/cli": "7.13.0",
    "@babel/core": "7.13.8",
    "@babel/node": "7.13.0",
    "@babel/preset-env": "7.13.9",
    "@babel/preset-typescript": "7.13.0",
    "@stryker-mutator/core": "4.4.1",
    "@stryker-mutator/jest-runner": "4.4.1",
    "@types/btoa": "1.2.3",
    "@types/diff": "5.0.0",
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@types/node-fetch": "2.5.8",
    "@typescript-eslint/eslint-plugin": "4.16.1",
    "@typescript-eslint/parser": "4.16.1",
    "babel-jest": "26.6.3",
    "babel-loader": "8.2.2",
    "diff": "5.0.0",
    "eslint": "7.21.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jest": "24.1.5",
    "eslint-plugin-json": "2.1.2",
    "eslint-plugin-markdown": "2.0.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "nock": "13.0.10",
    "node-fetch": "2.6.1",
    "prettier": "2.2.1",
    "typescript": "4.2.3",
    "webpack": "5.24.3",
    "webpack-cli": "4.5.0"
  }
}
